<UserControl x:Class="TwitchBot.UI_Parts.ChatMessageControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TwitchBot.UI_Parts"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="600">
    <Grid>
        <Border BorderThickness="1" 
                BorderBrush="Gray"
                Padding="5" 
                Margin="24,2,2,2"
                CornerRadius="5">
            <StackPanel>
                <TextBlock x:Name="UsernameText" 
                           FontWeight="Bold" 
                           Foreground="Blue" />

                <TextBlock x:Name="MessageText" 
                           TextWrapping="Wrap" />

                <TextBlock x:Name="TimestampText" 
                           FontSize="10" 
                           Foreground="Gray" />
            </StackPanel>
        </Border>
        <UniformGrid Columns="1" 
                     HorizontalAlignment="Left" Width="24">
            <Image x:Name="ModImage" 
                   Source="/Images/Moderator.png"
                   Grid.Row="1" Height="23" 
                   VerticalAlignment="Center" 
                   HorizontalAlignment="Left" 
                   Width="24"/>
            <Button x:Name="BanButton"
                    BorderBrush="Red"
                    Background="Transparent"
                    Grid.Row="2" Height="24" 
                    VerticalAlignment="Center" 
                    HorizontalAlignment="Left" 
                    Width="24"
                    Click="BanButton_Click">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
                <Image Source="/Images/Ban.png"/>
            </Button>
            <Button x:Name="TimeoutButton"
                    BorderBrush="MediumPurple"
                    Background="Transparent"
                    Grid.Row="3" 
                    HorizontalAlignment="Left" 
                    Width="24" Height="23" 
                    VerticalAlignment="Center"
                    Click="Timeout_Click">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
                <Image Source="/Images/Clock.png"/>
            </Button>
            <Button x:Name="DeleteButton"
                    BorderBrush="Yellow"
                    Background="Transparent"
                    HorizontalAlignment="Center" 
                    Width="24" 
                    Height="23" 
                    VerticalAlignment="Top"
                    Click="Delete_Click">
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
                <Image Source="/Images/Delete.png"/>
            </Button>
        </UniformGrid>
    </Grid>
</UserControl>
