<Page x:Class="TwitchBot.UI.Statistics.StatisticsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:TwitchBot.UI.Statistics"
      mc:Ignorable="d"
      Title="Statistics"
      d:DesignHeight="650" d:DesignWidth="1000"
      MinHeight="650"
      MinWidth="1000">
    <Grid>
        <StackPanel>
                <StackPanel Orientation="Horizontal"
                             Height="50"
                             Width="1000"
                             MinWidth="250">
                <Line Width="50"/>
                <Button x:Name="DaysAll"
                        Width="120"
                        Height="40"
                        Content="All Time"/>
                
                <Line Width="50"/>
                
                <Button x:Name="Days30"
                        Width="120"
                        Height="40"
                        Content="30 Days"/>
                
                <Line Width="50"/>
                
                <Button x:Name="Days7"
                        Width="120"
                        Height="40"
                        Content="7 Days"/>
                
                <Line Width="50"/>
                
                <Button x:Name="DayToday"
                        Width="120"
                        Height="40"
                        Content="Today"/>
                
                <Line Width="200"/>
                
                <Button x:Name="UserMod"
                        Width="50"
                        Height="40"
                        Content="User"
                        HorizontalAlignment="Right"/>
                <Button x:Name="ModuleMod"
                        Width="50"
                        Height="40"
                        Content="Module"
                        HorizontalAlignment="Right"/>
                </StackPanel>
                <UserControl x:Name="Filters"
                             HorizontalAlignment="Stretch"/>
                <UserControl x:Name="Stats"
                             HorizontalAlignment="Stretch"/>
        </StackPanel>
    </Grid>
</Page>
