<Window x:Class="TwitchBot.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TwitchBot.UI_Parts" 
        mc:Ignorable="d"
        MinHeight="600"
        MinWidth="1000"
        Title="MainWindow" Height="650" Width="1000">
    <Grid Background="#008080">
        <Frame x:Name="MainFrame"
               HorizontalAlignment="Stretch"
               Margin="210,46,45,10"
               NavigationUIVisibility="Hidden"/>
       

        <UniformGrid HorizontalAlignment="Left"
                Width="400" 
                Height="44"
                VerticalAlignment="Top"
                Background="Transparent"
                Rows="1"
                Margin="210,0,0,0">
            <Button x:Name="HomeButton"
                    BorderBrush="Transparent"
                    Background="#3498DB"
                    VerticalAlignment="Stretch" 
                    HorizontalAlignment="Stretch" 
                    Click="HomeButton_OnClick"
                    Padding="2"
                    Content = "Home"
                    FontWeight="Bold"
                    FontSize="20">
            </Button>
            <Button x:Name="ModulesButton"
                    BorderBrush="Transparent"
                    Background="#3498DB"
                    VerticalAlignment="Stretch" 
                    HorizontalAlignment="Stretch" 
                    Click="ModulesButton_Click"
                    Padding="2"
                    Content="Modules"
                    FontSize="20"
                    FontWeight="Bold">
            </Button>

            <Button x:Name="StatisticsButton"
                    BorderBrush="Transparent"
                    Background="#3498DB"
                    VerticalAlignment="Stretch" 
                    HorizontalAlignment="Stretch" 
                    Click="StatisticsButton_Click"
                    Padding="2"
                    Content="Statistics"
                    FontSize="20"
                    FontWeight="Bold">
            </Button>

            <Button x:Name="SettingsButton"
                    BorderBrush="Transparent"
                    Background="#3498DB"
                    VerticalAlignment="Stretch" 
                    HorizontalAlignment="Stretch" 
                    Click="SettingsButton_Click"
                    Padding="2"
                    Content="Settings"
                    FontSize="20"
                    FontWeight="Bold">
            </Button>

        </UniformGrid>
        <ListBox ItemsSource="{Binding Users}"
                 HorizontalAlignment="Left"
                 Width="200"
                 Margin="0,30,0,20"
                 x:Name="ViewerBox"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                 ScrollViewer.VerticalScrollBarVisibility="Auto"
                 BorderBrush="DarkGray"
                 BorderThickness="2"
                 Background="#B6CBBD">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <local:CurrentViewer ActiveViewer ="{Binding}"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

       <local:StreamInformationControl Height="36" 
                                       VerticalAlignment="Top"
                                       HorizontalAlignment="Right"/>
        <Label 
            Width="100"
            Height="26"
            VerticalAlignment="Top"
            HorizontalAlignment="Left"
            Content="Viewers in Chat"
            Foreground="#FFFFFF"/>
        
    </Grid>


</Window>
