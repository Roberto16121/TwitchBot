<Window x:Class="TwitchBot.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TwitchBot.UI_Parts" 
        xmlns:UserControl="clr-namespace:TwitchBot.UI_Parts"
        mc:Ignorable="d"
        Title="MainWindow" Height="650" Width="1000">
    <Grid>
        <ListBox 
            ItemsSource="{Binding Messages}"
            HorizontalContentAlignment="Stretch"
            BorderThickness="1" Margin="243,24,45,110"
            x:Name="ChatBox"
            ScrollViewer.HorizontalScrollBarVisibility="Disabled"
            ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <local:ChatMessageControl ChatMessage="{Binding}"/>
                </DataTemplate>
            </ListBox.ItemTemplate>

        </ListBox>
        <TextBox x:Name="MessageBox"
                 Margin="243,0,45,46" 
                 TextWrapping="Wrap"
                 Text=""
                 KeyDown="MessageBox_KeyDown" Height="42" VerticalAlignment="Bottom"/>
    </Grid>
</Window>
