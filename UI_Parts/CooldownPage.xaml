<Page x:Class="TwitchBot.UI_Parts.CooldownPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:TwitchBot.UI_Parts"
      mc:Ignorable="d"
      Title="CooldownPage" Height="400" Width="800">
    <Grid Background="DarkCyan">
        <StackPanel>
            <Border BorderThickness="1" 
                    BorderBrush="DarkGray"
                    CornerRadius="5"
                    Height="40">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Cooldown (seconds)"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center"
                               FontSize="16"
                               FontWeight="Bold"
                               Width="400"
                               Padding="5,0,0,0"/>
                    <TextBox x:Name="CooldownText"
                             HorizontalAlignment="Right"
                             VerticalAlignment="Center"
                             TextWrapping="Wrap"
                             FontSize="16"
                             FontWeight="Bold"
                             MaxLength="50"
                             Width="400"
                             KeyDown="CooldownText_OnKeyDown"/>
                </StackPanel>
            </Border>
            <Line Width="800"
                  Height="10"/>
            
            <Border BorderThickness="1" 
                    BorderBrush="DarkGray"
                    CornerRadius="5"
                    Height="40">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Custom Cooldown"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center"
                               FontSize="16"
                               FontWeight="Bold"
                               Width="400"
                               Padding="5,0,0,0"/>
                    <CheckBox x:Name="CustomCooldown"
                             HorizontalAlignment="Right"
                             VerticalAlignment="Center"
                             FontWeight="Bold"
                             Click="CustomCooldown_OnClick"/>
                </StackPanel>
            </Border>
            <Border Height="5"
                    Margin="0,10,0,0"
                    Background="DarkSlateGray"/>
            <Line Width="800"
                  Height="10"/>
            
            <TextBlock Text="Viewer Type"
                       Margin="10,0,0,0"
                       FontSize="20"
                       FontWeight="Bold"
                       Foreground="Coral"/>
            
            <Line Width="800"
                  Height="10"/>
            
            <Border BorderThickness="1" 
                    BorderBrush="DarkGray"
                    CornerRadius="5"
                    Height="40">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Moderator (seconds)"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center"
                               FontSize="16"
                               FontWeight="Bold"
                               Width="400"
                               Padding="5,0,0,0"/>
                    <TextBox x:Name="ModeratorText"
                             HorizontalAlignment="Right"
                             VerticalAlignment="Center"
                             TextWrapping="Wrap"
                             FontSize="16"
                             FontWeight="Bold"
                             MaxLength="50"
                             Width="400"
                             KeyDown="ModeratorText_OnKeyDown"/>
                </StackPanel>
            </Border>
            
            <Line Width="800"
                  Height="10"/>
            
            <Border BorderThickness="1" 
                    BorderBrush="DarkGray"
                    CornerRadius="5"
                    Height="40">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Subscriber (seconds)"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center"
                               FontSize="16"
                               FontWeight="Bold"
                               Width="400"
                               Padding="5,0,0,0"/>
                    <TextBox x:Name="SubscriberText"
                             HorizontalAlignment="Right"
                             VerticalAlignment="Center"
                             TextWrapping="Wrap"
                             FontSize="16"
                             FontWeight="Bold"
                             MaxLength="50"
                             Width="400"
                             KeyDown="SubscriberText_OnKeyDown"/>
                </StackPanel>
            </Border>
            
            <Line Width="800"
                  Height="10"/>
            
            <Border BorderThickness="1" 
                    BorderBrush="DarkGray"
                    CornerRadius="5"
                    Height="40">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="VIP (seconds)"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center"
                               FontSize="16"
                               FontWeight="Bold"
                               Width="400"
                               Padding="5,0,0,0"/>
                    <TextBox x:Name="VipText"
                             HorizontalAlignment="Right"
                             VerticalAlignment="Center"
                             TextWrapping="Wrap"
                             FontSize="16"
                             FontWeight="Bold"
                             MaxLength="50"
                             Width="400"
                             KeyDown="VipText_OnKeyDown"/>
                </StackPanel>
            </Border>
            
        </StackPanel>
    </Grid>
</Page>
