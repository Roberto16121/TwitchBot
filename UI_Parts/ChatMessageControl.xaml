<UserControl x:Class="TwitchBot.UI_Parts.ChatMessageControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TwitchBot.UI_Parts"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="600">
    <Grid>
        <Border BorderThickness="1" BorderBrush="Gray" Padding="5" Margin="19,2,2,2" CornerRadius="5">
            <StackPanel>
                <TextBlock x:Name="UsernameText" 
                           FontWeight="Bold" 
                           Foreground="Blue" />
                
                <TextBlock x:Name="MessageText" 
                           TextWrapping="WrapWithOverflow" />
                
                <TextBlock x:Name="TimestampText" 
                           FontSize="10" 
                           Foreground="Gray" />
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
